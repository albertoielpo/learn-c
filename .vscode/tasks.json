{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build current file using gcc"
        },
        {
            "type": "cppbuild",
            "label": "C: gcc build (with sds)",
            "command": "/usr/bin/gcc",
            "args": [
                // 1. Generate debug symbols and treat warnings verbosely
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",

                // 2. Add the include directory for sds.h
                "-I${workspaceFolder}/third-party/sds",

                // 3. Compile your current file
                "${file}",

                // 4. Also compile the sds implementation
                //    (so that sdsnew, sdsfree, etc. are linked in)
                "${workspaceFolder}/third-party/sds/sds.c",

                // 5. Produce the output executable in the same folder as the source
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                // 6. Link libm (sds may use malloc/free only; but if you need math funcs)
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build current file (with sds dependency) using gcc"
        },
        {
            "type": "cppbuild",
            "label": "C: gcc build hash",
            "command": "/usr/bin/gcc",
            "args": [
                // 1. Generate debug symbols and treat warnings verbosely
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",

                // 2. Add the include directory
                "-I${workspaceFolder}/deldup",

                // 3. Compile your current file
                "${file}",

                // 4. Also compile the sha implementation                
                "${workspaceFolder}/utils/sha1.c",
                "${workspaceFolder}/third-party/hash-table/ht.c",

                // 5. Produce the output executable in the same folder as the source
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                // 6. Link libm (sds may use malloc/free only; but if you need math funcs)
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build hash file using gcc"
        }
    ],
    "version": "2.0.0"
}